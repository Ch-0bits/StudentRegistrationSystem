@model Student



<form  method="post" asp-route-id="@Model.StudentId">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            
            <h2 class="text-primary">Edit Student Information</h2>
        </div>
        <hr />
        <div asp-validation-summary="All"></div>
        @Html.HiddenFor(m => m.StudentId)
        <div class="mb-3">
            <label asp-for="FName">First Name</label>
            <input asp-for="FName" class="form-control" />
            <span asp-validation-for="FName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LName">Last Name</label>
            <input asp-for="LName" class="form-control" />
            <span asp-validation-for="LName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label  asp-for="DOB">Date Of Birth:</label>
            <br />
            <input asp-for="DOB" type="date" >
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Course" class="form-label mt-4">Course</label>
            <select asp-for="Course" class="form-select">
                <option>Azure</option>
                <option>AWS</option>
                <option>GCP</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Hobbies" class="control-label mt-4">Hobbies</label>
            <select asp-for="Hobbies"
                    title="ctrl+click to multi-select" data-toggle="popover" data-trigger="hover"
            class="form-select" asp-items="Model.hobbiesList" multiple>
            </select>            
            <span asp-validation-for="Hobbies" class="text-danger"></span>
        </div>
        <button type="submit" onclick="return confirm('Are you sure?');" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@*to enable client side validation*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
<script type="text/javascript">
    $(function(){
        $('#Hobbies').multiselect({
            includeSelectAllOption: true
        });
    })    ;
</script>

